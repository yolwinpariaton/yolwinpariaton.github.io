// 1) Prices vs pay (indexed) — improved
const vis1 = {
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Prices vs pay (indexed to 2019=100)",
    "subtitle": "When prices rise faster than real earnings, purchasing power falls. Hover to inspect the gap."
  },
  "data": { "url": "data/vis1_prices_vs_pay.json" },
  "width": "container",
  "height": 340,

  "transform": [
    // Make sure values are numeric + date is parsed
    { "calculate": "toDate(datum.date)", "as": "d" },
    { "calculate": "toNumber(datum.value)", "as": "v" },

    // Build a wide version to compute the gap, then fold back to long so we can plot 3 lines cleanly
    {
      "pivot": "series",
      "value": "v",
      "groupby": ["d"]
    },
    {
      "calculate": "datum['CPIH (prices)'] - datum['Real earnings']",
      "as": "gap"
    },
    {
      "fold": ["CPIH (prices)", "Real earnings", "gap"],
      "as": ["series2", "value2"]
    },
    {
      "calculate": "datum.series2 === 'gap' ? 'Price–pay gap (index points)' : datum.series2",
      "as": "series_plot"
    }
  ],

  "params": [
    {
      "name": "hover",
      "select": { "type": "point", "fields": ["d"], "nearest": true, "on": "mousemove", "clear": "mouseout" }
    }
  ],

  "layer": [
    // Baseline at 100
    {
      "mark": { "type": "rule" },
      "encoding": {
        "y": { "datum": 100 },
        "color": { "value": "#999" },
        "opacity": { "value": 0.35 }
      }
    },

    // Main lines
    {
      "mark": { "type": "line", "strokeWidth": 2.5 },
      "encoding": {
        "x": { "field": "d", "type": "temporal", "title": "" },
        "y": {
          "field": "value2",
          "type": "quantitative",
          "title": "Index (2019=100) / Gap (index points)",
          "axis": { "grid": true, "tickCount": 7 }
        },
        "color": {
          "field": "series_plot",
          "type": "nominal",
          "title": "",
          "legend": { "orient": "top", "direction": "horizontal" }
        },
        "opacity": {
          "condition": { "param": "hover", "value": 1 },
          "value": 0.85
        }
      }
    },

    // Hover vertical rule (crosshair)
    {
      "mark": { "type": "rule" },
      "encoding": {
        "x": { "field": "d", "type": "temporal" },
        "opacity": {
          "condition": { "param": "hover", "value": 0.35 },
          "value": 0
        }
      }
    },

    // Hover points
    {
      "mark": { "type": "point", "filled": true, "size": 70 },
      "encoding": {
        "x": { "field": "d", "type": "temporal" },
        "y": { "field": "value2", "type": "quantitative" },
        "color": { "field": "series_plot", "type": "nominal" },
        "opacity": {
          "condition": { "param": "hover", "value": 1 },
          "value": 0
        }
      }
    },

    // Tooltip layer (one tooltip per hovered date; shows all series values cleanly)
    {
      "transform": [{ "filter": { "param": "hover" } }],
      "mark": { "type": "point", "opacity": 0 },
      "encoding": {
        "x": { "field": "d", "type": "temporal" },
        "tooltip": [
          { "field": "d", "type": "temporal", "title": "Date" },
          { "field": "CPIH (prices)", "type": "quantitative", "title": "Prices (index)", "format": ".1f" },
          { "field": "Real earnings", "type": "quantitative", "title": "Real earnings (index)", "format": ".1f" },
          { "field": "gap", "type": "quantitative", "title": "Price–pay gap", "format": ".1f" }
        ]
      }
    }
  ],

  "config": {
    "axis": { "labelFontSize": 12, "titleFontSize": 12 },
    "title": { "fontSize": 16, "subtitleFontSize": 12 },
    "view": { "stroke": null }
  }
};
