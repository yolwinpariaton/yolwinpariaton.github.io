{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Rent Inflation: UK Nations",
    "subtitle": "Annual percentage change by country",
    "anchor": "start",
    "fontSize": 30,
    "subtitleFontSize": 18,
    "subtitleColor": "#667085",
    "offset": 12
  },

  "width": "container",
  "height": 400,
  "padding": { "left": 40, "right": 40, "top": 10, "bottom": 20 },

  "config": {
    "view": { "stroke": null },
    "legend": {
      "orient": "bottom",
      "direction": "horizontal",
      "titleFontSize": 15,
      "labelFontSize": 14,
      "titlePadding": 6,
      "labelPadding": 4,
      "gradientThickness": 14,
      "gradientLength": 420
    }
  },

  "data": {
    "url": "https://raw.githubusercontent.com/ONSdigital/uk-topojson/main/output/topo.json",
    "format": { "type": "topojson", "feature": "ctry" }
  },

  "transform": [
    {
      "calculate": "datum.properties.AREACD ? datum.properties.AREACD : datum.properties.areacd",
      "as": "areacd_join"
    },
    {
      "lookup": "areacd_join",
      "from": {
        "data": { "url": "data/vis8_rent_map_countries.json" },
        "key": "areacd",
        "fields": ["areanm", "rent_inflation_yoy_pct"]
      }
    }
  ],

  "projection": {
    "type": "mercator",
    "center": [-3.5, 55.5]
  },

  "mark": {
    "type": "geoshape",
    "stroke": "#ffffff",
    "strokeWidth": 2
  },

  "encoding": {
    "color": {
      "field": "rent_inflation_yoy_pct",
      "type": "quantitative",
      "title": "Rent inflation (% y/y)",
      "scale": { "scheme": "oranges", "domain": [3.0, 9.0] }
    },
    "tooltip": [
      { "field": "areanm", "type": "nominal", "title": "Nation" },
      {
        "field": "rent_inflation_yoy_pct",
        "type": "quantitative",
        "title": "Rent inflation (% y/y)",
        "format": ".1f"
      }
    ]
  }
}
