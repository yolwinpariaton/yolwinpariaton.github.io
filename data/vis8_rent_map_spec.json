{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rent Inflation: UK Nations",
  "width": "container",
  "height": 500,
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": { "left": 10, "right": 10, "top": 10, "bottom": 10 },

  "title": {
    "text": "Rent Inflation: UK Nations",
    "subtitle": "Annual percentage change by country",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 12
  },

  "data": {
    "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/gb/ctry.json",
    "format": { "type": "json", "property": "features" }
  },

  "transform": [
    {
      "lookup": "properties.CTRY12NM",
      "from": {
        "data": { "url": "data/vis8_rent_map_countries.csv" },
        "key": "areanm",
        "fields": ["rent_inflation_yoy_pct"]
      }
    },
    { "calculate": "toNumber(datum.rent_inflation_yoy_pct)", "as": "infl" }
  ],

  "projection": {
    "type": "mercator",
    "center": [-3, 54.5],
    "scale": 1800
  },

  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 2
  },

  "encoding": {
    "color": {
      "condition": {
        "test": "isValid(datum.infl)",
        "field": "infl",
        "type": "quantitative",
        "title": "Rent inflation (% y/y)",
        "scale": { "scheme": "oranges", "domain": [3, 9] }
      },
      "value": "#e5e7eb",
      "legend": {
        "orient": "bottom",
        "direction": "horizontal",
        "titleFontSize": 11,
        "labelFontSize": 10
      }
    },
    "tooltip": [
      { "field": "properties.CTRY12NM", "type": "nominal", "title": "Nation" },
      { "field": "infl", "type": "quantitative", "title": "Rent inflation (%)", "format": ".1f" }
    ]
  },

  "config": {
    "background": "#ffffff",
    "view": { "stroke": null }
  }
}
