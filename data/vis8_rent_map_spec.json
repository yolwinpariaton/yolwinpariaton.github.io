{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rent Inflation: UK Nations",
  "width": "container",
  "height": 360,
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": { "left": 10, "right": 10, "top": 0, "bottom": 0 },

  "title": {
    "text": "Rent Inflation: UK Nations",
    "subtitle": "Annual percentage change by country",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 12
  },

  "data": {
    "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/gb-nation.geo.json"
  },

  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": { "url": "data/vis8_rent_map_countries.csv" },
        "key": "country",
        "fields": ["rent_inflation_yoy_pct"]
      }
    },
    { "calculate": "toNumber(datum.rent_inflation_yoy_pct)", "as": "infl" }
  ],

  "projection": { "type": "mercator" },

  "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1.2 },

  "encoding": {
    "color": {
      "field": "infl",
      "type": "quantitative",
      "title": "Rent inflation (% y/y)",
      "scale": { "scheme": "oranges", "domain": [3, 9] },
      "legend": { "orient": "bottom", "direction": "horizontal" }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "Nation" },
      { "field": "infl", "type": "quantitative", "title": "Rent inflation (% y/y)", "format": ".1f" }
    ]
  },

  "config": {
    "background": "#ffffff",
    "view": { "stroke": null },
    "legend": { "disable": false }
  }
}
