{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rent Inflation: UK Nations",
    "subtitle": "Annual percentage change by country",
    "anchor": "start",
    "fontSize": 28,
    "subtitleFontSize": 16,
    "subtitleColor": "#667085",
    "offset": 10
  },
  "width": "container",
  "height": 500,
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": { "left": 0, "right": 0, "top": 0, "bottom": 0 },
  "projection": { "type": "identity", "reflectY": true, "fit": true },
  "config": {
    "view": { "stroke": null },
    "legend": {
      "orient": "bottom",
      "direction": "horizontal",
      "titleFontSize": 16,
      "labelFontSize": 16,
      "titlePadding": 10,
      "labelPadding": 6,
      "gradientThickness": 16,
      "gradientLength": 520
    }
  },
  "layer": [
    {
      "data": {
        "url": "data/UK_NATIONS_TOPO.json",
        "format": { "type": "topojson", "feature": "nations" }
      },
      "transform": [
        {
          "lookup": "properties.AREACD",
          "from": {
            "data": { "url": "data/vis8_rent_map_countries.json" },
            "key": "areacd",
            "fields": ["areanm", "rent_inflation_yoy_pct"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 2 },
      "encoding": {
        "color": {
          "field": "rent_inflation_yoy_pct",
          "type": "quantitative",
          "title": "Rent inflation (% y/y)",
          "scale": { "scheme": "oranges", "domain": [3.0, 9.0] }
        },
        "tooltip": [
          { "field": "areanm", "type": "nominal", "title": "Nation" },
          {
            "field": "rent_inflation_yoy_pct",
            "type": "quantitative",
            "title": "Rent inflation (% y/y)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
