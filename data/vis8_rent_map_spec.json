{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rent Inflation: UK Nations",
  "width": "container",
  "height": 500,
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": { "left": 60, "right": 60, "top": 10, "bottom": 10 },

  "title": {
    "text": "Rent Inflation: UK Nations",
    "subtitle": "Annual percentage change by country",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 12
  },

  "data": {
    "url": "https://raw.githubusercontent.com/ONSdigital/uk-topojson/refs/heads/main/output/topo.json",
    "format": { "type": "topojson", "feature": "ctry" }
  },

  "transform": [
    {
      "lookup": "properties.areanm",
      "from": {
        "data": { "url": "data/vis8_rent_map_countries.csv" },
        "key": "areanm",
        "fields": ["rent_inflation_yoy_pct"]
      }
    },
    { "calculate": "toNumber(datum.rent_inflation_yoy_pct)", "as": "infl" }
  ],

  "projection": { "type": "mercator" },

  "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 2 },

  "encoding": {
    "color": {
      "field": "infl",
      "type": "quantitative",
      "title": "Rent inflation (% y/y)",
      "scale": { "scheme": "oranges", "domain": [3, 9] },
      "legend": {
        "orient": "bottom",
        "direction": "horizontal",
        "titleFontSize": 11,
        "labelFontSize": 10
      }
    },
    "tooltip": [
      { "field": "properties.areanm", "type": "nominal", "title": "Nation" },
      { "field": "infl", "type": "quantitative", "title": "Rent inflation (%)", "format": ".1f" }
    ]
  },

  "config": { "background": "#ffffff", "view": { "stroke": null } }
}
