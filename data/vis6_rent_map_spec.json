{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rent Inflation: English Regions",
  "width": "container",
  "height": 500,
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": { "left": 10, "right": 10, "top": 10, "bottom": 10 },
  "title": {
    "text": "Rent Inflation: English Regions",
    "subtitle": "Annual percentage change by region",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 12
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ONSdigital/uk-topojson/refs/heads/main/output/topo.json",
    "format": { "type": "topojson", "feature": "rgn" }
  },
  "transform": [
    { "filter": "startsWith(datum.properties.areacd, 'E12')" },
    {
      "lookup": "properties.areanm",
      "from": {
        "data": { "url": "data/vis6_rent_map_regions.csv" },
        "key": "areanm",
        "fields": ["rent_inflation_yoy_pct"]
      }
    },
    { "calculate": "toNumber(datum.rent_inflation_yoy_pct)", "as": "infl" }
  ],
  "projection": { "type": "mercator", "center": [-2, 53], "scale": 2400 },
  "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1.5 },
  "encoding": {
    "color": {
      "field": "infl",
      "type": "quantitative",
      "title": "Rent inflation (% y/y)",
      "scale": { "scheme": "blues", "domain": [3, 10] },
      "legend": {
        "orient": "bottom",
        "direction": "horizontal",
        "titleFontSize": 11,
        "labelFontSize": 10
      }
    },
    "tooltip": [
      { "field": "properties.areanm", "type": "nominal", "title": "Region" },
      {
        "field": "infl",
        "type": "quantitative",
        "title": "Rent inflation (%)",
        "format": ".1f"
      }
    ]
  },
  "config": { "background": "#ffffff", "view": { "stroke": null } }
}
