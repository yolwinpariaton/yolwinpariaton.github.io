{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rent Inflation: English Regions",
  "width": "container",
  "height": 360,
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": { "left": 10, "right": 10, "top": 0, "bottom": 0 },

  "title": {
    "text": "Rent Inflation: English Regions",
    "subtitle": "Annual percentage change by region",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 12
  },

  "data": {
    "url": "https://raw.githubusercontent.com/ONSdigital/geoportal-data/master/geographies/UK/Regions/2021/Regions_Dec_2021_EN_BFC_v2.topojson",
    "format": { "type": "topojson", "feature": "Regions_Dec_2021_EN_BFC_v2" }
  },

  "transform": [
    {
      "lookup": "properties.rgn21nm",
      "from": {
        "data": { "url": "data/vis6_rent_map_regions.csv" },
        "key": "areanm",
        "fields": ["rent_inflation_yoy_pct"]
      }
    },
    { "calculate": "toNumber(datum.rent_inflation_yoy_pct)", "as": "infl" }
  ],

  "projection": { "type": "mercator" },

  "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 1.2 },

  "encoding": {
    "color": {
      "field": "infl",
      "type": "quantitative",
      "title": "Rent inflation (% y/y)",
      "scale": { "scheme": "blues", "domain": [3, 10] },
      "legend": { "orient": "bottom", "direction": "horizontal" }
    },
    "tooltip": [
      { "field": "properties.rgn21nm", "type": "nominal", "title": "Region" },
      { "field": "infl", "type": "quantitative", "title": "Rent inflation (% y/y)", "format": ".1f" }
    ]
  },

  "config": {
    "background": "#ffffff",
    "view": { "stroke": null },
    "legend": { "disable": false }
  }
}
