{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Real Wage Squeeze by Sector",
    "subtitle": "Real wage index (2020 = 100). Values below 100 indicate loss of purchasing power."
  },

  "width": "container",
  "height": 420,

  "data": {
    "url": "chart2_wage_squeeze.json"
  },

  "transform": [
    { "calculate": "toDate(datum.date)", "as": "date_parsed" }
  ],

  "params": [
    {
      "name": "sectorSelect",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Public Sector",
          "Private Sector",
          "Finance",
          "Retail",
          "Healthcare"
        ],
        "name": "Select sector: "
      }
    }
  ],

  "transform": [
    { "calculate": "toDate(datum.date)", "as": "date_parsed" },
    {
      "filter": "sectorSelect == 'All' || datum.sector == sectorSelect"
    }
  ],

  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeDash": [5, 5],
        "strokeWidth": 2,
        "color": "#6b7280"
      },
      "encoding": {
        "y": { "datum": 100 }
      }
    },

    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "point": true
      },
      "encoding": {
        "x": {
          "field": "date_parsed",
          "type": "temporal",
          "title": "Date",
          "axis": {
            "format": "%Y",
            "labelAngle": 0
          }
        },
        "y": {
          "field": "squeeze_index",
          "type": "quantitative",
          "title": "Real Wage Index (2020 = 100)",
          "scale": { "domain": [90, 125] }
        },
        "color": {
          "field": "sector",
          "type": "nominal",
          "legend": { "title": "Sector" }
        },
        "tooltip": [
          { "field": "sector", "title": "Sector" },
          {
            "field": "date_parsed",
            "type": "temporal",
            "format": "%B %Y",
            "title": "Month"
          },
          {
            "field": "squeeze_index",
            "title": "Real Wage Index",
            "format": ".1f"
          },
          {
            "field": "inflation",
            "title": "Inflation (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
