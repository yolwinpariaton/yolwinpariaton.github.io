{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Regional Cost Variations Across UK",
    "subtitle": "Cost of living index and affordability by region"
  },

  "width": "container",
  "autosize": { "type": "fit", "contains": "padding" },
  "height": 420,
  "padding": { "top": 6, "left": 10, "right": 10, "bottom": 6 },

  "projection": {
    "type": "mercator",
    "center": [-3, 54.7],
    "scale": 1700
  },

  "layer": [
    {
      "data": {
        "url": "https://vega.github.io/editor/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "transform": [{ "filter": "datum.id == 826 || datum.id == 372" }],
      "mark": {
        "type": "geoshape",
        "fill": "#eef2ff",
        "stroke": "#1f2937",
        "strokeWidth": 0.9
      }
    },

    {
      "data": {
        "url": "https://vega.github.io/editor/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "transform": [{ "filter": "datum.id == 372" }],
      "mark": {
        "type": "geoshape",
        "fill": "#f3f4f6",
        "stroke": "#9ca3af",
        "strokeWidth": 0.6
      }
    },

    {
      "data": { "url": "chart3_regional_detailed.json" },
      "transform": [{ "calculate": "datum.population / 1000000", "as": "population_m" }],
      "mark": {
        "type": "circle",
        "opacity": 0.78,
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },

        "size": {
          "field": "population_m",
          "type": "quantitative",
          "scale": { "range": [60, 950] },
          "legend": {
            "title": "Population (millions)",
            "format": ".0f",
            "symbolType": "circle",
            "values": [2, 4, 6, 8]
          }
        },

        "color": {
          "field": "cost_index",
          "type": "quantitative",
          "scale": { "scheme": "reds", "domainMid": 110 },
          "legend": { "title": "Cost Index" }
        },

        "tooltip": [
          { "field": "region", "title": "Region" },
          { "field": "cost_index", "title": "Cost Index", "format": ".1f" },
          { "field": "population_m", "title": "Population (millions)", "format": ".2f" },
          { "field": "rent_to_income", "title": "Rent/Income Ratio (%)", "format": ".0f" },
          { "field": "energy_burden", "title": "Energy Burden (%)", "format": ".1f" },
          { "field": "food_inflation", "title": "Food Inflation (%)", "format": ".1f" }
        ]
      }
    }
  ],

  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" },
    "title": { "fontSize": 14, "subtitleFontSize": 12, "anchor": "start" },
    "legend": { "labelFontSize": 11, "titleFontSize": 12 }
  }
}
