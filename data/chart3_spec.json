{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Regional Cost Variations Across UK",
    "subtitle": "Cost of living index and affordability by region"
  },

  "width": "container",
  "autosize": { "type": "fit", "contains": "padding" },
  "height": 520,
  "padding": { "top": 8, "left": 8, "right": 8, "bottom": 8 },

  "projection": {
    "type": "mercator",
    "center": [-3, 54.7],
    "scale": 2600
  },

  "layer": [
    {
      "data": {
        "url": "uk_regions.geojson",
        "format": { "type": "geojson" }
      },
      "transform": [
        {
          "lookup": "properties.NUTS112CD",
          "from": {
            "data": { "url": "chart3_regional_detailed.json" },
            "key": "code",
            "fields": [
              "region",
              "cost_index",
              "rent_to_income",
              "energy_burden",
              "food_inflation",
              "population"
            ]
          }
        },
        { "calculate": "datum.population / 1000000", "as": "population_m" }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 1.1 },
      "encoding": {
        "color": {
          "condition": {
            "test": "isValid(datum.cost_index)",
            "field": "cost_index",
            "type": "quantitative",
            "scale": { "scheme": "reds" },
            "legend": { "title": "Cost Index", "gradientLength": 170 }
          },
          "value": "#eef2ff"
        },
        "tooltip": [
          { "field": "properties.NUTS112NM", "title": "Region (Boundary)" },
          { "field": "properties.NUTS112CD", "title": "Code" },
          { "field": "region", "title": "Region (Data)" },
          { "field": "cost_index", "title": "Cost Index", "format": ".1f" },
          { "field": "population_m", "title": "Population (millions)", "format": ".2f" },
          { "field": "rent_to_income", "title": "Rent/Income Ratio (%)", "format": ".0f" },
          { "field": "energy_burden", "title": "Energy Burden (%)", "format": ".1f" },
          { "field": "food_inflation", "title": "Food Inflation (%)", "format": ".1f" }
        ]
      }
    },

    {
      "data": {
        "url": "uk_regions.geojson",
        "format": { "type": "geojson" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "transparent",
        "stroke": "#111827",
        "strokeWidth": 1.0
      }
    },

    {
      "data": { "url": "chart3_regional_detailed.json" },
      "transform": [{ "calculate": "datum.population / 1000000", "as": "population_m" }],
      "mark": {
        "type": "circle",
        "opacity": 0.6,
        "stroke": "#ffffff",
        "strokeWidth": 1.1
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "population_m",
          "type": "quantitative",
          "scale": { "range": [40, 520] },
          "legend": {
            "title": "Population (millions)",
            "values": [2, 4, 6, 8],
            "format": ".0f",
            "symbolType": "circle"
          }
        },
        "color": { "value": "#111827" },
        "tooltip": [
          { "field": "region", "title": "Region" },
          { "field": "code", "title": "Code" },
          { "field": "population_m", "title": "Population (millions)", "format": ".2f" }
        ]
      }
    }
  ],

  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" },
    "title": { "fontSize": 14, "subtitleFontSize": 12, "anchor": "start" },
    "legend": { "labelFontSize": 11, "titleFontSize": 12, "padding": 8 }
  }
}
