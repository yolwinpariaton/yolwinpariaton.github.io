{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Regional Cost Variations Across UK",
    "subtitle": "Cost of living index and affordability by region"
  },
  "width": "container",
  "autosize": { "type": "fit", "contains": "padding" },
  "height": 550,
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/holtzy/D3-graph-gallery/master/DATA/world.geojson",
        "format": { "type": "geojson" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f3f4f6",
        "stroke": "#d1d5db",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "chart3_regional_detailed.json"
      },
      "mark": { "type": "circle", "opacity": 0.8 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": { "range": [100, 2000] },
          "legend": { "title": "Population (millions)" }
        },
        "color": {
          "field": "cost_index",
          "type": "quantitative",
          "scale": { "scheme": "reds" },
          "legend": { "title": "Cost Index" }
        },
        "tooltip": [
          { "field": "region", "title": "Region" },
          { "field": "cost_index", "title": "Cost Index", "format": ".1f" },
          { "field": "rent_to_income", "title": "Rent/Income Ratio (%)", "format": ".0f" },
          { "field": "energy_burden", "title": "Energy Burden (%)", "format": ".1f" },
          { "field": "food_inflation", "title": "Food Inflation (%)", "format": ".1f" }
        ]
      }
    }
  ],
  "config": { "view": { "stroke": "transparent" } }
}
