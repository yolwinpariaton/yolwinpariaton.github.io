{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Regional Cost Variations Across UK",
    "subtitle": "Cost of living index and affordability by region"
  },

  "width": "container",
  "autosize": { "type": "fit", "contains": "padding" },
  "height": 520,
  "padding": { "top": 8, "left": 8, "right": 8, "bottom": 8 },

  "projection": {
    "type": "mercator",
    "center": [-3, 54.7],
    "scale": 2600
  },

  "layer": [
    {
      "data": { "url": "uk_regions.geojson", "format": { "type": "geojson" } },
      "transform": [
        {
          "calculate": "datum.properties.ITL121CD || datum.properties.itl121cd || datum.properties.ITL_CODE || datum.properties.itl_code || datum.properties.NUTS112CD || datum.properties.nuts112cd || datum.properties.NUTS118CD || datum.properties.nuts118cd || datum.properties.NUTS_ID || datum.properties.nuts_id || datum.properties.CODE || datum.properties.code || datum.properties.GSS_CODE || datum.properties.gss_code",
          "as": "join_code"
        },
        {
          "calculate": "datum.properties.NAME || datum.properties.name || datum.properties.ITL121NM || datum.properties.itl121nm || datum.properties.NUTS112NM || datum.properties.nuts112nm || datum.properties.Region || datum.properties.region",
          "as": "join_name"
        },

        {
          "lookup": "join_code",
          "from": {
            "data": { "url": "chart3_regional_detailed.json" },
            "key": "code",
            "fields": [
              "region",
              "cost_index",
              "rent_to_income",
              "energy_burden",
              "food_inflation",
              "population"
            ]
          },
          "as": [
            "region_code",
            "cost_index_code",
            "rent_to_income_code",
            "energy_burden_code",
            "food_inflation_code",
            "population_code"
          ]
        },

        {
          "lookup": "join_name",
          "from": {
            "data": { "url": "chart3_regional_detailed.json" },
            "key": "region",
            "fields": [
              "region",
              "cost_index",
              "rent_to_income",
              "energy_burden",
              "food_inflation",
              "population"
            ]
          },
          "as": [
            "region_name",
            "cost_index_name",
            "rent_to_income_name",
            "energy_burden_name",
            "food_inflation_name",
            "population_name"
          ]
        },

        {
          "calculate": "datum.region_code || datum.region_name || datum.join_name",
          "as": "region"
        },
        {
          "calculate": "datum.cost_index_code != null ? datum.cost_index_code : datum.cost_index_name",
          "as": "cost_index"
        },
        {
          "calculate": "datum.rent_to_income_code != null ? datum.rent_to_income_code : datum.rent_to_income_name",
          "as": "rent_to_income"
        },
        {
          "calculate": "datum.energy_burden_code != null ? datum.energy_burden_code : datum.energy_burden_name",
          "as": "energy_burden"
        },
        {
          "calculate": "datum.food_inflation_code != null ? datum.food_inflation_code : datum.food_inflation_name",
          "as": "food_inflation"
        },
        {
          "calculate": "datum.population_code != null ? datum.population_code : datum.population_name",
          "as": "population"
        },

        { "calculate": "datum.population / 1000000", "as": "population_m" }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 1.0 },
      "encoding": {
        "color": {
          "condition": {
            "test": "isValid(datum.cost_index) && datum.cost_index != null",
            "field": "cost_index",
            "type": "quantitative",
            "scale": { "scheme": "reds" },
            "legend": { "title": "Cost Index", "gradientLength": 170 }
          },
          "value": "#eef2ff"
        },
        "tooltip": [
          { "field": "region", "title": "Region" },
          { "field": "join_code", "title": "Boundary code" },
          { "field": "join_name", "title": "Boundary name" },
          { "field": "cost_index", "title": "Cost Index", "format": ".1f" },
          { "field": "population_m", "title": "Population (millions)", "format": ".2f" },
          { "field": "rent_to_income", "title": "Rent/Income Ratio (%)", "format": ".0f" },
          { "field": "energy_burden", "title": "Energy Burden (%)", "format": ".1f" },
          { "field": "food_inflation", "title": "Food Inflation (%)", "format": ".1f" }
        ]
      }
    },

    {
      "data": { "url": "uk_regions.geojson", "format": { "type": "geojson" } },
      "mark": { "type": "geoshape", "fill": "transparent", "stroke": "#111827", "strokeWidth": 1.0 }
    },

    {
      "data": { "url": "chart3_regional_detailed.json" },
      "transform": [{ "calculate": "datum.population / 1000000", "as": "population_m" }],
      "mark": { "type": "circle", "opacity": 0.55, "stroke": "#ffffff", "strokeWidth": 1.1 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "population_m",
          "type": "quantitative",
          "scale": { "range": [35, 520] },
          "legend": {
            "title": "Population (millions)",
            "values": [2, 4, 6, 8],
            "format": ".0f",
            "symbolType": "circle"
          }
        },
        "color": { "value": "#111827" },
        "tooltip": [
          { "field": "region", "title": "Region" },
          { "field": "code", "title": "Code" }
        ]
      }
    }
  ],

  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" }
  }
}
