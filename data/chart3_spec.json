{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Cost of Living Crisis: Regional Impact Analysis",
    "subtitle": "Bubble size = population, Color = cost index"
  },
  "width": 750,
  "height": 550,
  "projection": {
    "type": "mercator",
    "center": [
      -2,
      54
    ],
    "scale": 2500
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/uk/lad.json",
        "format": {
          "type": "topojson",
          "feature": "lad"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#999",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YOUR_USERNAME/YOUR_REPO/main/data/chart3_regional_detailed.json"
      },
      "mark": {
        "type": "circle",
        "opacity": 0.85,
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {
          "field": "lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        },
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "range": [
              200,
              3000
            ]
          },
          "title": "Population",
          "legend": {
            "format": ",.0f"
          }
        },
        "color": {
          "field": "cost_index",
          "type": "quantitative",
          "scale": {
            "scheme": "redyellowblue",
            "reverse": true,
            "domain": [
              85,
              145
            ]
          },
          "title": "Cost Index"
        },
        "tooltip": [
          {
            "field": "region",
            "title": "Region"
          },
          {
            "field": "cost_index",
            "title": "Cost Index"
          },
          {
            "field": "median_income",
            "title": "Median Income",
            "format": "\u00a3,.0f"
          },
          {
            "field": "rent_to_income",
            "title": "Rent/Income Ratio",
            "format": ".0f%"
          },
          {
            "field": "energy_burden",
            "title": "Energy Burden",
            "format": ".1f%"
          },
          {
            "field": "population",
            "title": "Population",
            "format": ",.0f"
          }
        ]
      }
    }
  ]
}