{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "UK CPI Inflation Rate with Key Events",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/chart1_inflation_timeline.json"
  },
  "transform": [
    {
      "filter": "datum.type == 'CPI'"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "line": {
          "color": "#1f77b4"
        },
        "color": {
          "x1": 1,
          "y1": 1,
          "x2": 1,
          "y2": 0,
          "gradient": "linear",
          "stops": [
            {
              "offset": 0,
              "color": "#1f77b4"
            },
            {
              "offset": 1,
              "color": "#aec7e8"
            }
          ]
        }
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": "Date"
        },
        "y": {
          "field": "inflation",
          "type": "quantitative",
          "title": "Inflation Rate (%)"
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "format": "%B %Y"
          },
          {
            "field": "inflation",
            "title": "Inflation (%)",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "y": 2
          }
        ]
      },
      "mark": {
        "type": "rule",
        "strokeDash": [
          4,
          4
        ],
        "color": "red"
      },
      "encoding": {
        "y": {
          "field": "y",
          "type": "quantitative"
        }
      }
    }
  ]
}