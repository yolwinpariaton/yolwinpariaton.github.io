{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Inflation Decomposition & Key Events",
    "subtitle": "Contribution by component with headline inflation"
  },
  "width": "container",
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },

  "data": {
    "url": "chart1_inflation_advanced.json"
  },

  "transform": [
    { "calculate": "toDate(datum.date)", "as": "date_parsed" }
  ],

  "layer": [
    {
      "mark": { "type": "area", "opacity": 0.7 },
      "encoding": {
        "x": { "field": "date_parsed", "type": "temporal", "title": "" },
        "y": { "field": "food", "type": "quantitative", "stack": "zero", "title": "Contribution (pp)" }
      }
    },
    {
      "mark": { "type": "area", "opacity": 0.7 },
      "encoding": {
        "x": { "field": "date_parsed", "type": "temporal" },
        "y": { "field": "energy", "type": "quantitative", "stack": "zero" }
      }
    },
    {
      "mark": { "type": "area", "opacity": 0.7 },
      "encoding": {
        "x": { "field": "date_parsed", "type": "temporal" },
        "y": { "field": "core", "type": "quantitative", "stack": "zero" }
      }
    },
    {
      "mark": { "type": "line", "strokeWidth": 3, "color": "black" },
      "encoding": {
        "x": { "field": "date_parsed", "type": "temporal" },
        "y": { "field": "headline", "type": "quantitative", "title": "Headline inflation (%)" }
      }
    }
  ]
}
