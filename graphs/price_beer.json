{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Draught bitter price over time",
  "data": {
    "url": "data/price_beer.csv"
  },
  "transform": [
    {
      "calculate": "toDate(datum.dateISO)",
      "as": "date"
    }
  ],
  "title": {
    "text": "Draught bitter price (per pint)",
    "subtitle": "Monthly price observations 1988-1990",
    "anchor": "start",
    "fontSize": 18,
    "subtitleFontSize": 12
  },
  "width": "container",
  "height": 340,
  "mark": {
    "type": "line",
    "point": true,
    "tooltip": true,
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {
        "format": "%Y",
        "labelAngle": 0
      }
    },
    "y": {
      "field": "price",
      "type": "quantitative",
      "title": "Price (Â£)",
      "scale": {
        "zero": false
      }
    },
    "color": {
      "value": "#1F6F8B"
    },
    "tooltip": [
      {
        "field": "date",
        "type": "temporal",
        "format": "%b %Y",
        "title": "Date"
      },
      {
        "field": "price",
        "type": "quantitative",
        "format": ".3f",
        "title": "Price"
      },
      {
        "field": "item_name",
        "type": "nominal",
        "title": "Item"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}