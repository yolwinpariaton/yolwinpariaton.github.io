{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Beer price series with same-color moving average, KPI subtitle using first/last values, and hover interaction.",
  "data": { "url": "data/price_beer.csv", "format": { "type": "csv" } },

  "transform": [
    { "calculate": "toDate(datum.dateISO)", "as": "date" },
    { "calculate": "toNumber(datum.price)", "as": "price_num" },

    {
      "window": [
        { "op": "first_value", "field": "date", "as": "startDate" },
        { "op": "last_value", "field": "date", "as": "endDate" },
        { "op": "first_value", "field": "price_num", "as": "startPrice" },
        { "op": "last_value", "field": "price_num", "as": "endPrice" }
      ],
      "sort": [{ "field": "date", "order": "ascending" }]
    },
    { "calculate": "(datum.endPrice - datum.startPrice)", "as": "deltaAbs" },
    { "calculate": "(datum.deltaAbs / datum.startPrice)", "as": "deltaPct" },

    {
      "window": [{ "op": "mean", "field": "price_num", "as": "ma6" }],
      "frame": [-5, 0],
      "sort": [{ "field": "date", "order": "ascending" }]
    }
  ],

  "title": {
    "text": "Draught bitter price (per pint)",
    "subtitle": {
      "expr": "timeFormat(datum.startDate,'%b %Y') + ' → ' + timeFormat(datum.endDate,'%b %Y') + ' | ' + format(datum.startPrice,'.3f') + ' → ' + format(datum.endPrice,'.3f') + ' (' + (datum.deltaAbs>=0?'+':'') + format(datum.deltaAbs,'.3f') + ', ' + (datum.deltaPct>=0?'+':'') + format(datum.deltaPct*100,'.1f') + '%)'"
    },
    "anchor": "start",
    "fontSize": 18,
    "subtitleFontSize": 12,
    "offset": 12
  },

  "width": "container",
  "height": 340,
  "padding": { "top": 8, "right": 18, "bottom": 10, "left": 10 },

  "layer": [
    {
      "mark": { "type": "line", "interpolate": "monotone", "strokeWidth": 2.8 },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": null,
          "axis": { "format": "%Y", "labelAngle": 0, "grid": false }
        },
        "y": {
          "field": "price_num",
          "type": "quantitative",
          "title": null,
          "axis": { "format": ".2f", "grid": true, "gridOpacity": 0.12, "tickCount": 6 }
        },
        "color": { "value": "#1F6F8B" }
      }
    },

    {
      "mark": { "type": "line", "interpolate": "monotone", "strokeWidth": 2.2, "strokeDash": [6, 4], "opacity": 0.85 },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "y": { "field": "ma6", "type": "quantitative" },
        "color": { "value": "#1F6F8B" }
      }
    },

    {
      "params": [
        {
          "name": "hover",
          "select": { "type": "point", "fields": ["date"], "nearest": true, "on": "mousemove", "clear": "mouseout" }
        }
      ],
      "mark": { "type": "point", "filled": true, "size": 70 },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "y": { "field": "price_num", "type": "quantitative" },
        "opacity": { "condition": { "param": "hover", "value": 1 }, "value": 0 },
        "color": { "value": "#1F6F8B" },
        "tooltip": [
          { "field": "item_name", "type": "nominal", "title": "Item" },
          { "field": "date", "type": "temporal", "title": "Month", "format": "%b %Y" },
          { "field": "price_num", "type": "quantitative", "title": "Price", "format": ".4f" },
          { "field": "ma6", "type": "quantitative", "title": "6m avg", "format": ".4f" }
        ]
      }
    },

    {
      "transform": [{ "filter": { "param": "hover" } }],
      "mark": { "type": "rule", "strokeWidth": 1 },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "color": { "value": "#D6D6D6" }
      }
    }
  ],

  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" }
  }
}
