{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 5 greenhouse gas emitters in 1970",
  "data": {
    "url": "../data/emissions_tidy.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    { "filter": "datum.Year == 1970" },
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Emissions", "order": "descending" }]
    },
    { "filter": "datum.rank <= 5" }
  ],
  "mark": { "type": "bar", "cornerRadiusEnd": 4 },
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "sort": "-x",
      "title": null
    },
    "x": {
      "field": "Emissions",
      "type": "quantitative",
      "title": "Greenhouse Gas Emissions (kt COâ‚‚-eq)"
    },
    "color": { "field": "Country", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "Country", "type": "nominal", "title": "Country" },
      { "field": "Year", "type": "quantitative", "title": "Year" },
      { "field": "Emissions", "type": "quantitative", "title": "Emissions (kt)" }
    ]
  },
  "width": 400,
  "height": 300,
  "config": {
    "axis": { "labelFontSize": 12, "titleFontSize": 13 },
    "view": { "stroke": "transparent" }
  }
}
