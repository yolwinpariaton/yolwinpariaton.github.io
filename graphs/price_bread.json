{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bread rolls price indexed to base 100",
  "data": {
    "url": "data/price_bread.csv"
  },
  "transform": [
    {
      "calculate": "toDate(datum.dateISO)",
      "as": "date"
    },
    {
      "joinaggregate": [{
        "op": "min",
        "field": "price",
        "as": "minPrice"
      }]
    },
    {
      "calculate": "(datum.price / datum.minPrice) * 100",
      "as": "index"
    }
  ],
  "title": {
    "text": "Six Bread Rolls Price Evolution",
    "subtitle": "Indexed price (first observation = 100) | White/Brown bread rolls",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 13,
    "color": "#2c3e50",
    "subtitleColor": "#7f8c8d",
    "offset": 20
  },
  "width": "container",
  "height": 360,
  "layer": [
    {
      "mark": {
        "type": "area",
        "opacity": 0.2,
        "line": false
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "index",
          "type": "quantitative"
        },
        "y2": {
          "datum": 100
        },
        "color": {
          "value": "#D4A574"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": null,
          "axis": {
            "format": "%b %Y",
            "labelAngle": -45,
            "labelFontSize": 11,
            "labelColor": "#5a6c7d",
            "gridOpacity": 0.3,
            "domainColor": "#bdc3c7"
          }
        },
        "y": {
          "field": "index",
          "type": "quantitative",
          "title": "Price Index",
          "scale": {
            "zero": false
          },
          "axis": {
            "labelFontSize": 11,
            "labelColor": "#5a6c7d",
            "titleFontSize": 13,
            "titleColor": "#34495e",
            "gridOpacity": 0.3,
            "domainColor": "#bdc3c7"
          }
        },
        "color": {
          "value": "#8B6914"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 80
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "index",
          "type": "quantitative"
        },
        "color": {
          "value": "#CD853F"
        },
        "opacity": {
          "condition": {
            "param": "hover",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "format": "%B %Y",
            "title": "Month"
          },
          {
            "field": "price",
            "type": "quantitative",
            "format": "Â£.3f",
            "title": "Actual Price"
          },
          {
            "field": "index",
            "type": "quantitative",
            "format": ".2f",
            "title": "Price Index"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [6, 4],
        "strokeWidth": 2,
        "opacity": 0.6
      },
      "encoding": {
        "y": {
          "datum": 100
        },
        "color": {
          "value": "#7f8c8d"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -5,
        "dy": -5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "aggregate": "max",
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "datum": 100
        },
        "text": {
          "value": "Base = 100"
        },
        "color": {
          "value": "#7f8c8d"
        }
      }
    }
  ],
  "params": [
    {
      "name": "hover",
      "select": {
        "type": "point",
        "on": "mouseover",
        "nearest": true,
        "fields": ["date"]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#fafafa"
  }
}