{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bread rolls price indexed to base 100",
  "data": {
    "url": "data/price_bread.csv"
  },
  "transform": [
    {
      "calculate": "toDate(datum.dateISO)",
      "as": "date"
    },
    {
      "joinaggregate": [{
        "op": "min",
        "field": "price",
        "as": "minPrice"
      }]
    },
    {
      "calculate": "(datum.price / datum.minPrice) * 100",
      "as": "index"
    }
  ],
  "title": {
    "text": "Six bread rolls price (white/brown)",
    "subtitle": "Indexed (first observation = 100)",
    "anchor": "start",
    "fontSize": 18,
    "subtitleFontSize": 12
  },
  "width": "container",
  "height": 340,
  "mark": {
    "type": "line",
    "point": true,
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {
        "format": "%Y",
        "labelAngle": 0
      }
    },
    "y": {
      "field": "index",
      "type": "quantitative",
      "title": "Price Index",
      "scale": {
        "zero": false
      }
    },
    "color": {
      "value": "#8C4A2F"
    },
    "tooltip": [
      {
        "field": "date",
        "type": "temporal",
        "format": "%b %Y",
        "title": "Date"
      },
      {
        "field": "price",
        "type": "quantitative",
        "format": ".3f",
        "title": "Price"
      },
      {
        "field": "index",
        "type": "quantitative",
        "format": ".1f",
        "title": "Index"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}