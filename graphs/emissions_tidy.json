{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 Global Greenhouse Gas Emitters",
    "subtitle": "Data scraped from Wikipedia (MtCO2e)",
    "anchor": "start",
    "fontSize": 14
  },
  "data": {
    "url": "data/emissions_tidy.csv"
  },
  "transform": [
    {
      "aggregate": [{"op": "sum", "field": "Emissions", "as": "TotalEmissions"}],
      "groupby": ["Country"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "TotalEmissions", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 10"
    },
    {
      "lookup": "Country",
      "from": {
        "data": {"url": "data/emissions_tidy.csv"},
        "key": "Country",
        "fields": ["Year", "Emissions"]
      }
    }
  ],
  "width": 400,
  "height": 300,
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "Emissions",
      "type": "quantitative",
      "title": "Annual Emissions (MtCO2e)"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "sort": {"field": "Emissions", "order": "descending"},
      "legend": {"title": "Country"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "format": "%Y", "title": "Year"},
      {"field": "Emissions", "type": "quantitative", "format": ",.2f", "title": "Emissions"}
    ]
  }
}