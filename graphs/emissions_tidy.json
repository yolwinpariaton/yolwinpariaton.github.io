{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 Global Greenhouse Gas Emitters",
    "subtitle": "Data scraped from Wikipedia (MtCO2e)",
    "anchor": "start",
    "fontSize": 14
  },
  "data": {
    "url": "data/emissions_tidy.csv"
  },
  "transform": [
    {
      "joinaggregate": [
        {"op": "sum", "field": "Emissions", "as": "Total_Country_Emissions"}
      ],
      "groupby": ["Country"]
    },
    {
      "window": [{"op": "dense_rank", "as": "emission_rank"}],
      "sort": [{"field": "Total_Country_Emissions", "order": "descending"}]
    },
    {
      "filter": "datum.emission_rank <= 10"
    }
  ],
  "width": 400,
  "height": 300,
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "Emissions",
      "type": "quantitative",
      "title": "Annual Emissions (MtCO2e)"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "sort": {"field": "Emissions", "order": "descending"},
      "legend": {"title": "Top 10 Emitters"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "format": "%Y", "title": "Year"},
      {"field": "Emissions", "type": "quantitative", "format": ",.2f", "title": "Emissions"}
    ]
  }
}