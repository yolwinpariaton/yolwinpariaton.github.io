{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 5 Global Greenhouse Gas Emitters Over Time",
    "subtitle": "Based on total cumulative emissions across all years (MtCO₂e)",
    "anchor": "start",
    "fontSize": 14
  },
  "data": {
    "url": "data/emissions_tidy.csv"
  },
  "transform": [
    {
      "aggregate": [
        {"op": "sum", "field": "Emissions", "as": "Total_Emissions"}
      ],
      "groupby": ["Country"]
    },
    {
      "window": [{"op": "row_number", "as": "rank"}],
      "sort": [{"field": "Total_Emissions", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 5"
    },
    {
      "lookup": "Country",
      "from": {
        "data": {"url": "data/emissions_tidy.csv"},
        "key": "Country",
        "fields": ["Year", "Emissions"]
      }
    }
  ],
  "width": 400,
  "height": 300,
  "mark": {"type": "line", "point": true, "strokeWidth": 2.5},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {"format": "%Y", "labelAngle": 0}
    },
    "y": {
      "field": "Emissions",
      "type": "quantitative",
      "title": "Annual Emissions (MtCO₂e)",
      "axis": {"format": ",.0f"}
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "legend": {"title": "Top 5 Emitters", "orient": "right"},
      "scale": {"scheme": "category10"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "format": "%Y", "title": "Year"},
      {"field": "Emissions", "type": "quantitative", "format": ",.0f", "title": "Annual Emissions"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": true, "gridColor": "#e0e0e0"}
  }
}