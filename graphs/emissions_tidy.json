{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 15 Global Greenhouse Gas Emitters - 2020",
    "subtitle": "Annual emissions in megatonnes CO₂-equivalent",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#2c3e50"
  },
  "data": {
    "url": "data/emissions_tidy.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Year == 2020"},
    {"calculate": "toNumber(datum.Emissions) / 1000", "as": "Emissions_Mt"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Emissions_Mt", "order": "descending"}]
    },
    {"filter": "datum.rank <= 15"},
    {
      "calculate": "datum.rank + '. ' + datum.Country",
      "as": "country_label"
    },
    {
      "calculate": "format(datum.Emissions_Mt, ',.0f') + ' Mt'",
      "as": "emissions_label"
    }
  ],
  "width": 700,
  "height": 500,
  "mark": {
    "type": "bar",
    "cornerRadiusEnd": 4,
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "Emissions_Mt",
      "type": "quantitative",
      "title": "Greenhouse Gas Emissions (Mt CO₂-eq)",
      "axis": {
        "format": ",.0f",
        "labelAngle": 0,
        "gridOpacity": 0.3
      }
    },
    "y": {
      "field": "country_label",
      "type": "nominal",
      "sort": "-x",
      "title": null,
      "axis": {
        "labelFontSize": 12,
        "labelLimit": 250
      }
    },
    "color": {
      "field": "Emissions_Mt",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [500, 1000, 2000, 5000],
        "range": ["#27ae60", "#f39c12", "#e67e22", "#e74c3c", "#c0392b"]
      },
      "legend": {
        "title": "Emission Level",
        "orient": "right",
        "format": ",.0f"
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "rank", "type": "quantitative", "title": "Rank"},
      {"field": "Emissions_Mt", "type": "quantitative", "title": "Emissions", "format": ",.1f"},
      {"field": "Year", "type": "nominal", "title": "Year"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {
      "gridColor": "#e0e0e0",
      "domainColor": "#999"
    }
  }
}