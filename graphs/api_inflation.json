{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Live UK Inflation data via API",
  "data": {
    "url": "https://corsproxy.io/?https://api.economicsobservatory.com/gbr/cpic?format=csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "line", "color": "#0b1f3a"},
  "width": 400,
  "height": 300,
  "encoding": {
    "x": {"field": "date", "type": "temporal", "title": "Year"},
    "y": {"field": "value", "type": "quantitative", "title": "CPI Inflation (%)"}
  }
}