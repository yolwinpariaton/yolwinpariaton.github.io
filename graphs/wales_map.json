{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Business Density in Wales",
    "subtitle": "Active enterprises by local authority (2024)",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "width": 250,
  "height": 420,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/LAD_WLS_2025_05.topojson",
        "format": {"type": "topojson", "feature": "object_name"}
      },
      "projection": {
        "type": "mercator",
        "center": [-3.5, 52.3],
        "scale": 4800
      },
      "transform": [
        {
          "lookup": "properties.LAD25CD",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/graphs/wales_business.csv"
            },
            "key": "geo_id",
            "fields": ["Data values", "Area"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1.2
      },
      "encoding": {
        "color": {
          "field": "Data values",
          "type": "quantitative",
          "scale": {
            "scheme": "blues",
            "domain": [1000, 13500]
          },
          "legend": {
            "title": "Active Enterprises",
            "format": ",",
            "orient": "bottom",
            "direction": "horizontal",
            "gradientLength": 200,
            "labelFontSize": 11,
            "titleFontSize": 12
          }
        },
        "tooltip": [
          {"field": "Area", "title": "Local Authority"},
          {"field": "Data values", "title": "Active Enterprises", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}