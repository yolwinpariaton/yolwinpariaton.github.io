{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Population by Local Authority in Wales",
    "fontSize": 18,
    "font": "Arial",
    "anchor": "start"
  },
  "width": 600,
  "height": 500,
  "data": {
    "url": "../data/wales_simple.geojson",
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.LAD13CD",
      "from": {
        "data": {
          "url": "../data/wales_population.csv"
        },
        "key": "area_code",
        "fields": ["population", "local_authority"]
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [-3.5, 52.3],
    "scale": 5000
  },
  "mark": {
    "type": "geoshape",
    "stroke": "#ffffff",
    "strokeWidth": 1.5
  },
  "encoding": {
    "color": {
      "field": "population",
      "type": "quantitative",
      "scale": {
        "scheme": "blues",
        "domain": [60, 370]
      },
      "legend": {
        "title": "Population (thousands)",
        "orient": "right",
        "format": ","
      }
    },
    "tooltip": [
      {
        "field": "local_authority",
        "type": "nominal",
        "title": "Local Authority"
      },
      {
        "field": "population",
        "type": "quantitative",
        "title": "Population (thousands)",
        "format": ","
      }
    ]
  }
}
