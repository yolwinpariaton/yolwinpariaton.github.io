{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scotland",
    "subtitle": ["Population Density (2021 Census)", "People per square km"],
    "anchor": "start",
    "color": "black",
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitleColor": "black"
  },
  "width": 400,
  "height": 550,
  "view": {"stroke": null},
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/scotland_lad.geojson",
    "format": {"type": "json", "property": "features"}
  },
  "projection": {
    "type": "identity",
    "reflectY": true
  },
  "transform": [
    {
      "lookup": "properties.LAD13NM",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/scotland_density.csv"
        },
        "key": "Council",
        "fields": ["Density"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "Density",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "teals"},
      "legend": {"title": null, "orient": "bottom-right"}
    },
    "tooltip": [
      {"field": "properties.LAD13NM", "type": "nominal", "title": "Council"},
      {"field": "Density", "type": "quantitative", "title": "Density"}
    ]
  }
}