{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sct/lad.geojson",
    "format": {"property": "features"}
  },
  "view": {"stroke": null},
  "background": null,
  "width": "container",
  "height": 550,
  "autosize": {"type": "fit", "contains": "padding"},
  "title": {
    "text": "Scotland",
    "anchor": "start",
    "color": "#2c3e50",
    "fontSize": 18,
    "subtitle": "Population Density (2021 Census)",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "subtitleColor": "#7f8c8d"
  },
  "projection": {
    "type": "mercator",
    "center": [-4.1, 57.8],
    "scale": 2800
  },
  "transform": [
    {
      "lookup": "properties.LAD13NM",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/scotland_density.csv"
        },
        "key": "Council",
        "fields": ["Density"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "#333",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "Density",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "teals"},
      "legend": {
        "title": "Density (per km²)",
        "orient": "bottom-right",
        "direction": "horizontal",
        "gradientLength": 200
      }
    },
    "tooltip": [
      {"field": "properties.LAD13NM", "type": "nominal", "title": "Council"},
      {"field": "Density", "type": "quantitative", "title": "Density (per km²)", "format": ".1f"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"}
  }
}