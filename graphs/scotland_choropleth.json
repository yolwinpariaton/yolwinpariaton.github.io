            { "area": "Stirling", "density": 40 },
            { "area": "West Dunbartonshire", "density": 562 },
            { "area": "West Lothian", "density": 419 },
            { "area": "Na h-Eileanan an Iar", "density": 9 }
          ]
        },
        "key": "area",
        "fields": ["density"]
      }
    },
    { "calculate": "isValid(datum.density) ? datum.density : null", "as": "density_clean" }
  ],
  "projection": { "type": "mercator" },
  "layer": [
    {
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.6 },
      "encoding": {
        "color": {
          "field": "density_clean",
          "type": "quantitative",
          "title": "People per km²",
          "scale": { "scheme": "teals", "type": "log" },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "gradientLength": 240,
            "labelOverlap": true
          }
        },
        "opacity": {
          "condition": { "test": "datum.density_clean != null", "value": 1 },
          "value": 0.25
        },
        "tooltip": [
          { "field": "properties.LAD13NM", "type": "nominal", "title": "Council Area" },
          { "field": "density_clean", "type": "quantitative", "title": "Density (per km²)", "format": ",.0f" }
        ]
      }
    },
    {
      "transform": [{ "filter": "datum.density_clean == null" }],
      "mark": {
        "type": "geoshape",
        "stroke": "#ffffff",
        "strokeWidth": 0.6,
        "fill": "#f1f5f9"
      }
    }
  ],
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" },
    "axis": { "labelFontSize": 11, "titleFontSize": 12 },
    "legend": { "labelFontSize": 11, "titleFontSize": 12 }
  }
}
