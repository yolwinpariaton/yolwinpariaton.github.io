{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scotland: Population Density",
    "subtitle": ["People per square km (2021 Census)", "Darker blues indicate higher urban concentration"],
    "anchor": "start",
    "color": "#1e293b",
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "subtitleColor": "#64748b"
  },
  "width": 400,
  "height": 550,
  "view": {"stroke": null},
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sct/lad.json",
    "format": {"type": "topojson", "feature": "lad"}
  },
  "projection": {
    "type": "mercator",
    "center": [-4.1, 57.8],
    "scale": 3200
  },
  "transform": [
    {
      "lookup": "properties.LAD13NM",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/scotland_density.csv"
        },
        "key": "Council",
        "fields": ["Density"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "#ffffff",
    "strokeWidth": 0.3
  },
  "encoding": {
    "color": {
      "field": "Density",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "scheme": "teals"
      },
      "legend": {
        "title": "Density",
        "orient": "bottom-right",
        "gradientLength": 150
      }
    },
    "tooltip": [
      {"field": "properties.LAD13NM", "type": "nominal", "title": "Council Area"},
      {"field": "Density", "type": "quantitative", "title": "Density (ppl/kmÂ²)", "format": ".1f"}
    ]
  }
}