{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scotland Population Density",
    "subtitle": "People per square km (2021 Census)",
    "anchor": "start",
    "fontSize": 16
  },
  "width": 400,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sct/lad.json",
    "format": {"type": "topojson", "feature": "lad"}
  },
  "projection": {
    "type": "mercator",
    "center": [-4.1, 57.8],
    "scale": 3200
  },
  "transform": [
    {
      "lookup": "properties.LAD13NM",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/scotland_density.csv"
        },
        "key": "Council",
        "fields": ["Density"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
  "encoding": {
    "color": {
      "field": "Density",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "blues"},
      "legend": {"title": "Density (per kmÂ²)", "orient": "right"}
    },
    "tooltip": [
      {"field": "properties.LAD13NM", "type": "nominal", "title": "Council Area"},
      {"field": "Density", "type": "quantitative", "title": "Density"}
    ]
  }
}