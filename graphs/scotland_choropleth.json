{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scotland Population Density by Council Area",
    "subtitle": "People per square kilometer (2021 Census)",
    "fontSize": 14,
    "anchor": "start"
  },
  "width": 380,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/united-kingdom/uk-counties.json",
    "format": {"type": "topojson", "feature": "GBR_adm2"}
  },
  "transform": [
    {"filter": "datum.properties.TYPE_2 == 'Council Area'"}
  ],
  "projection": {
    "type": "mercator",
    "center": [-4, 57],
    "scale": 2000
  },
  "mark": {
    "type": "geoshape",
    "fill": "lightblue",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "value": "steelblue"
    },
    "tooltip": [
      {"field": "properties.NAME_2", "title": "Council Area"}
    ]
  }
}