{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scotland: Population Density by Council Area",
    "subtitle": "People per km² (approx., 2021–2022). Choropleth by Local Authority.",
    "anchor": "start",
    "fontSize": 14,
    "subtitleFontSize": 12
  },
  "width": 380,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sco/lad.json",
    "format": { "type": "json", "property": "features" }
  },
  "transform": [
    {
      "lookup": "properties.LAD13NM",
      "from": {
        "data": {
          "values": [
            { "area": "Aberdeen City", "density": 1208 },
            { "area": "Aberdeenshire", "density": 41 },
            { "area": "Angus", "density": 53 },
            { "area": "Argyll and Bute", "density": 13 },
            { "area": "City of Edinburgh", "density": 1948 },
            { "area": "Clackmannanshire", "density": 325 },
            { "area": "Dumfries and Galloway", "density": 24 },
            { "area": "Dundee City", "density": 2477 },
            { "area": "East Ayrshire", "density": 97 },
            { "area": "East Dunbartonshire", "density": 623 },
            { "area": "East Lothian", "density": 152 },
            { "area": "East Renfrewshire", "density": 543 },
            { "area": "Falkirk", "density": 518 },
            { "area": "Fife", "density": 281 },
            { "area": "Glasgow City", "density": 3521 },
            { "area": "Highland", "density": 9 },
