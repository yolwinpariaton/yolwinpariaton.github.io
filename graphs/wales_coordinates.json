{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Major Cities and Towns in Wales",
    "subtitle": "Population size shown by circle size. Source: ONS",
    "anchor": "start",
    "fontSize": 16
  },
  "width": 400,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [-3.7, 52.3],
    "scale": 7000
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/wls/lad.json",
        "format": {"type": "topojson", "feature": "lad"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f8fafc",
        "stroke": "#cbd5e1",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "values": [
          {"city": "Cardiff", "lat": 51.4816, "lon": -3.1791, "pop": 362400},
          {"city": "Swansea", "lat": 51.6214, "lon": -3.9436, "pop": 245500},
          {"city": "Newport", "lat": 51.5837, "lon": -2.9977, "pop": 154700},
          {"city": "Wrexham", "lat": 53.0430, "lon": -2.9925, "pop": 65600},
          {"city": "Bangor", "lat": 53.2274, "lon": -4.1293, "pop": 18300}
        ]
      },
      "mark": {"type": "circle", "color": "#7c3aed", "opacity": 0.7},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "pop",
          "type": "quantitative",
          "scale": {"range": [50, 1000]},
          "legend": {"title": "Population", "orient": "bottom-right"}
        },
        "tooltip": [
          {"field": "city", "title": "City"},
          {"field": "pop", "title": "Population", "format": ","}
        ]
      }
    }
  ]
}