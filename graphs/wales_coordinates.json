{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 550,
  "autosize": {"type": "fit", "contains": "padding"},
  "view": {"stroke": null},
  "background": null,
  "title": {
    "text": "Wales",
    "anchor": "start",
    "color": "#2c3e50",
    "fontSize": 18,
    "subtitle": "Tourist Attractions & Landmarks",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "subtitleColor": "#7f8c8d"
  },
  "projection": {
    "type": "mercator",
    "center": [-3.8, 52.3],
    "scale": 6500
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/wls/lad.geojson",
        "format": {"property": "features"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e9e9e9",
        "stroke": "#333",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "properties.LAD13NM",
          "type": "nominal",
          "title": "Region"
        }
      }
    },
    {
      "data": {
        "values": [
          {"name": "Snowdonia", "lat": 53.0685, "lon": -3.9086, "visitors": 4.27, "type": "National Park"},
          {"name": "Brecon Beacons", "lat": 51.8799, "lon": -3.4354, "visitors": 3.85, "type": "National Park"},
          {"name": "Pembrokeshire Coast", "lat": 51.6721, "lon": -5.0527, "visitors": 4.2, "type": "National Park"},
          {"name": "Cardiff Castle", "lat": 51.4822, "lon": -3.1812, "visitors": 2.1, "type": "Castle"},
          {"name": "Llandudno", "lat": 53.3239, "lon": -3.8261, "visitors": 1.85, "type": "Resort"}
        ]
      },
      "mark": {
        "type": "circle",
        "filled": true,
        "opacity": 0.85,
        "stroke": "white",
        "strokeWidth": 1.5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "visitors",
          "type": "quantitative",
          "scale": {"range": [200, 1200]},
          "legend": {
            "title": "Visitors (M)",
            "orient": "bottom-right",
            "direction": "horizontal"
          }
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {"scheme": "category10"},
          "legend": {
            "title": "Type",
            "orient": "top-right"
          }
        },
        "tooltip": [
          {"field": "name", "title": "Place"},
          {"field": "type", "title": "Type"},
          {"field": "visitors", "title": "Visitors (M)", "format": ".2f"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}