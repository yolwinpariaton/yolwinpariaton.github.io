{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Wales: Tourist Attractions & Landmarks",
    "subtitle": "Major destinations with annual visitor numbers (millions)",
    "fontSize": 14,
    "anchor": "start"
  },
  "width": 380,
  "height": 400,
  "projection": {
    "type": "mercator",
    "center": [-3.8, 52.3],
    "scale": 6500
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/wls/lad.json",
        "format": {"type": "topojson", "feature": "lad"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f4f8",
        "stroke": "#94a3b8",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "values": [
          {"name": "Snowdonia", "lat": 53.0685, "lon": -3.9086, "visitors": 4.27, "type": "National Park"},
          {"name": "Brecon Beacons", "lat": 51.8799, "lon": -3.4354, "visitors": 3.85, "type": "National Park"},
          {"name": "Pembrokeshire Coast", "lat": 51.6721, "lon": -5.0527, "visitors": 4.2, "type": "National Park"},
          {"name": "Cardiff Castle", "lat": 51.4822, "lon": -3.1812, "visitors": 2.1, "type": "Castle"},
          {"name": "Caernarfon Castle", "lat": 53.1393, "lon": -4.2769, "visitors": 0.68, "type": "Castle"},
          {"name": "Llandudno", "lat": 53.3239, "lon": -3.8261, "visitors": 1.85, "type": "Resort"},
          {"name": "Tenby", "lat": 51.6729, "lon": -4.7036, "visitors": 0.95, "type": "Resort"},
          {"name": "Anglesey", "lat": 53.2500, "lon": -4.3333, "visitors": 1.72, "type": "Island"}
        ]
      },
      "mark": {
        "type": "circle",
        "filled": true,
        "opacity": 0.85,
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "visitors",
          "type": "quantitative",
          "scale": {"range": [100, 800]},
          "title": "Annual Visitors (millions)",
          "legend": {"orient": "bottom-right"}
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {
            "domain": ["National Park", "Castle", "Resort", "Island"],
            "range": ["#22c55e", "#dc2626", "#0ea5e9", "#a855f7"]
          },
          "title": "Type",
          "legend": {"orient": "top-right"}
        },
        "tooltip": [
          {"field": "name", "title": "Attraction"},
          {"field": "type", "title": "Type"},
          {"field": "visitors", "title": "Annual Visitors", "format": ".2f million"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"name": "Snowdonia", "lat": 53.0685, "lon": -3.9086},
          {"name": "Cardiff", "lat": 51.4822, "lon": -3.1812},
          {"name": "Pembrokeshire", "lat": 51.6721, "lon": -5.0527}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dy": -12
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "name"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}