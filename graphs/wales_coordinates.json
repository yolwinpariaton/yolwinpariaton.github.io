{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Wales: Major Places by Population",
    "subtitle": "Coordinates map. Bubble size shows population (approx.).",
    "anchor": "start",
    "fontSize": 14,
    "subtitleFontSize": 12
  },
  "width": 380,
  "height": 400,
  "projection": {
    "type": "mercator",
    "center": [-3.7, 52.35],
    "scale": 7200
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/wls/lad.json",
        "format": { "type": "json", "property": "features" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f8fafc",
        "stroke": "#94a3b8",
        "strokeWidth": 0.6
      }
    },
    {
      "data": {
        "values": [
          { "place": "Cardiff", "lat": 51.4816, "lon": -3.1791, "population": 362400 },
          { "place": "Swansea", "lat": 51.6214, "lon": -3.9436, "population": 246466 },
          { "place": "Newport", "lat": 51.5842, "lon": -2.9977, "population": 156447 },
          { "place": "Wrexham", "lat": 53.0469, "lon": -2.9916, "population": 65692 },
          { "place": "Barry", "lat": 51.3997, "lon": -3.2838, "population": 54673 },
          { "place": "Bridgend", "lat": 51.5043, "lon": -3.5773, "population": 46757 },
          { "place": "Llanelli", "lat": 51.6821, "lon": -4.1626, "population": 43878 },
          { "place": "Merthyr Tydfil", "lat": 51.7487, "lon": -3.3816, "population": 43820 },
          { "place": "Caerphilly", "lat": 51.5742, "lon": -3.2180, "population": 41402 },
          { "place": "Port Talbot", "lat": 51.5906, "lon": -3.7986, "population": 37276 },
          { "place": "Pontypridd", "lat": 51.6021, "lon": -3.3420, "population": 32694 },
          { "place": "Colwyn Bay", "lat": 53.2946, "lon": -3.7277, "population": 34284 },
          { "place": "Rhyl", "lat": 53.3192, "lon": -3.4916, "population": 25149 },
          { "place": "Abergavenny", "lat": 51.8241, "lon": -3.0166, "population": 10078 }
        ]
      },
      "mark": {
        "type": "circle",
        "opacity": 0.85,
        "stroke": "#ffffff",
        "strokeWidth": 1.2
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "population",
          "type": "quantitative",
          "title": "Population",
          "scale": { "range": [40, 900] }
        },
        "color": {
          "field": "population",
          "type": "quantitative",
          "title": "Population",
          "scale": { "scheme": "blues" },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "gradientLength": 240
          }
        },
        "tooltip": [
          { "field": "place", "type": "nominal", "title": "Place" },
          { "field": "population", "type": "quantitative", "title": "Population", "format": ",.0f" }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "place": "Cardiff", "lat": 51.4816, "lon": -3.1791, "population": 362400 },
          { "place": "Swansea", "lat": 51.6214, "lon": -3.9436, "population": 246466 },
          { "place": "Newport", "lat": 51.5842, "lon": -2.9977, "population": 156447 },
          { "place": "Wrexham", "lat": 53.0469, "lon": -2.9916, "population": 65692 }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 11,
        "fontWeight": "bold",
        "dx": 10,
        "dy": -8,
        "fill": "#0f172a"
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "place" }
      }
    }
  ],
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" },
    "legend": { "labelFontSize": 11, "titleFontSize": 12 }
  }
}
