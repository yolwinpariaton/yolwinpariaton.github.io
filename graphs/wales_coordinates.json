{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Wales",
    "subtitle": ["Tourist Attractions & Landmarks", "Annual visitor numbers (millions)"],
    "anchor": "start",
    "color": "black",
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitleColor": "black"
  },
  "width": 400,
  "height": 550,
  "view": {"stroke": null},
  "background": "transparent",
  "projection": {
    "type": "mercator",
    "center": [-3.8, 52.4],
    "scale": 7000
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/data/wales_lad.geojson",
        "format": {"type": "json", "property": "features"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e9e9e9",
        "stroke": "#000",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "values": [
          {"name": "Snowdonia", "lat": 53.0685, "lon": -3.9086, "visitors": 4.27, "type": "National Park"},
          {"name": "Brecon Beacons", "lat": 51.8799, "lon": -3.4354, "visitors": 3.85, "type": "National Park"},
          {"name": "Pembrokeshire Coast", "lat": 51.6721, "lon": -5.0527, "visitors": 4.2, "type": "National Park"},
          {"name": "Cardiff Castle", "lat": 51.4822, "lon": -3.1812, "visitors": 2.1, "type": "Castle"},
          {"name": "Llandudno", "lat": 53.3239, "lon": -3.8261, "visitors": 1.85, "type": "Resort"}
        ]
      },
      "mark": {"type": "circle", "filled": true, "opacity": 0.8, "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "visitors",
          "type": "quantitative",
          "scale": {"range": [100, 1000]},
          "legend": {"title": "Visitors (M)", "orient": "bottom-right"}
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {"scheme": "category10"},
          "legend": {"title": "Type", "orient": "top-right"}
        },
        "tooltip": [
          {"field": "name", "title": "Place"},
          {"field": "visitors", "title": "Visitors (M)"}
        ]
      }
    }
  ]
}