{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Wales: Landmarks & Tourism",
    "subtitle": ["Annual visitors (Millions)", "Circle size represents popularity"],
    "anchor": "start",
    "color": "#1e293b",
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "subtitleColor": "#64748b"
  },
  "width": 400,
  "height": 550,
  "view": {"stroke": null},
  "background": "transparent",
  "projection": {
    "type": "mercator",
    "center": [-3.8, 52.4],
    "scale": 7500
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/wls/lad.json",
        "format": {"type": "topojson", "feature": "lad"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f1f5f9",
        "stroke": "#94a3b8",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {"field": "properties.LAD13NM", "title": "Region"}
      }
    },
    {
      "data": {
        "values": [
          {"name": "Snowdonia", "lat": 53.0685, "lon": -3.9086, "visitors": 4.27, "type": "Park"},
          {"name": "Cardiff Castle", "lat": 51.4822, "lon": -3.1812, "visitors": 2.1, "type": "Castle"},
          {"name": "Conwy Castle", "lat": 53.2829, "lon": -3.8239, "visitors": 0.8, "type": "Castle"},
          {"name": "Pembrokeshire", "lat": 51.8, "lon": -4.9, "visitors": 4.2, "type": "Park"},
          {"name": "Portmeirion", "lat": 52.913, "lon": -4.095, "visitors": 0.25, "type": "Village"},
          {"name": "St Davids", "lat": 51.881, "lon": -5.268, "visitors": 0.5, "type": "City"}
        ]
      },
      "mark": {
        "type": "circle",
        "filled": true,
        "opacity": 0.8,
        "stroke": "white",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "visitors",
          "type": "quantitative",
          "scale": {"range": [100, 1200]},
          "legend": {"title": "Visitors (M)"}
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {"scheme": "set2"},
          "legend": {"orient": "top-right"}
        },
        "tooltip": [
          {"field": "name", "title": "Site"},
          {"field": "visitors", "title": "Annual Visitors (M)"},
          {"field": "type", "title": "Category"}
        ]
      }
    }
  ]
}