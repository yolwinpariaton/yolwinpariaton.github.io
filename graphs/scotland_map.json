{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scottish Whisky Distilleries: Heritage Tourism",
    "subtitle": "Annual visitor numbers to major distilleries (2024 estimates)",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "width": 300,
  "height": 450,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sco/lad.json",
        "format": {"type": "json", "property": "features"}
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "geoshape",
        "fill": "#f0f7f9",
        "stroke": "#5a8ca8",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/graphs/scotland_distilleries.csv"
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "#333",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "annual_visitors",
          "type": "quantitative",
          "scale": {"range": [100, 1500]},
          "legend": {
            "title": "Annual Visitors",
            "format": ".0s",
            "orient": "right",
            "offset": 40,
            "symbolFillColor": "grey",
            "labelFontSize": 11
          }
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "domain": ["Highlands", "Islay", "Isle of Skye", "Lowlands", "Orkney", "Speyside"],
            "range": ["#e69f00", "#56b4e9", "#009e73", "#f0e442", "#0072b2", "#d55e00"]
          },
          "legend": {
            "title": "Whisky Region",
            "orient": "bottom",
            "columns": 3,
            "labelFontSize": 10,
            "offset": 10
          }
        },
        "tooltip": [
          {"field": "distillery", "title": "Distillery"},
          {"field": "region", "title": "Region"},
          {"field": "annual_visitors", "title": "Visitors", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}