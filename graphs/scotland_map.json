{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 500,
  "title": {
    "text": "Tourist Attractions in Scotland",
    "fontSize": 16
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sco/topo_lad.json",
        "format": {
          "type": "topojson",
          "feature": "lad"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#dce8f0",
        "stroke": "#8dabc4",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "values": [
          {"name": "Edinburgh Castle", "lat": 55.9486, "lon": -3.1999, "visitors": 2200, "type": "Historic"},
          {"name": "Loch Ness", "lat": 57.3229, "lon": -4.4244, "visitors": 500, "type": "Natural"},
          {"name": "Stirling Castle", "lat": 56.1164, "lon": -3.9486, "visitors": 650, "type": "Historic"},
          {"name": "Glasgow Science Centre", "lat": 55.8593, "lon": -4.2943, "visitors": 450, "type": "Museum"},
          {"name": "Isle of Skye", "lat": 57.2736, "lon": -6.2155, "visitors": 800, "type": "Natural"},
          {"name": "St Andrews", "lat": 56.3398, "lon": -2.7967, "visitors": 300, "type": "Historic"},
          {"name": "Ben Nevis", "lat": 56.7969, "lon": -5.0036, "visitors": 150, "type": "Natural"},
          {"name": "Kelvingrove Museum", "lat": 55.8689, "lon": -4.2752, "visitors": 1500, "type": "Museum"},
          {"name": "Rosslyn Chapel", "lat": 55.8551, "lon": -3.1594, "visitors": 180, "type": "Historic"},
          {"name": "Glenfinnan Viaduct", "lat": 56.8740, "lon": -5.4321, "visitors": 400, "type": "Historic"}
        ]
      },
      "mark": {
        "type": "circle",
        "opacity": 0.85,
        "stroke": "#333",
        "strokeWidth": 1.5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "visitors",
          "type": "quantitative",
          "scale": {"range": [150, 1500]},
          "legend": {
            "title": "Annual Visitors (thousands)",
            "orient": "bottom-right"
          }
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {
            "domain": ["Historic", "Natural", "Museum"],
            "range": ["#e74c3c", "#27ae60", "#3498db"]
          },
          "legend": {
            "title": "Attraction Type",
            "orient": "bottom-right"
          }
        },
        "tooltip": [
          {"field": "name", "title": "Attraction"},
          {"field": "type", "title": "Type"},
          {"field": "visitors", "title": "Visitors (thousands)", "format": ","}
        ]
      }
    }
  ]
}