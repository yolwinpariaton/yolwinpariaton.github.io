{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scottish Whisky Distilleries: Heritage Tourism",
    "subtitle": "Annual visitor numbers to major distilleries (2024 estimates)",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 12
  },

  "width": 300,
  "height": 395,
  "padding": {"top": 10, "right": 10, "bottom": 10, "left": 10},
  "autosize": {"type": "pad", "contains": "padding"},

  "projection": {
    "type": "mercator",
    "center": [-4.2, 57.3],
    "scale": 2100,
    "translate": [140, 198]
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sco/lad.json",
        "format": {"type": "json", "property": "features"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f8f9fa",
        "stroke": "#adb5bd",
        "strokeWidth": 0.5,
        "clip": false
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/graphs/scotland_distilleries.csv"
      },
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},

        "size": {
          "field": "annual_visitors",
          "type": "quantitative",
          "scale": {"range": [100, 1600]},
          "legend": {
            "title": "Annual Visitors",
            "format": ".0s",
            "orient": "none",
            "legendX": 286,
            "legendY": 112,
            "labelFontSize": 10,
            "titleFontSize": 12,
            "labelAlign": "left",
            "titleAlign": "left"
          }
        },

        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "domain": ["Highlands", "Islay", "Isle of Skye", "Lowlands", "Orkney", "Speyside"],
            "range": ["#440154", "#3b528b", "#21908d", "#5dc963", "#fde725", "#d55e00"]
          },
          "legend": {
            "title": "Whisky Region",
            "orient": "none",
            "legendX": 12,
            "legendY": 362,
            "columns": 3,
            "labelFontSize": 10,
            "titleFontSize": 12
          }
        },

        "tooltip": [
          {"field": "distillery", "title": "Distillery"},
          {"field": "region", "title": "Region"},
          {"field": "annual_visitors", "title": "Visitors", "format": ","}
        ]
      }
    }
  ],

  "config": {
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}
