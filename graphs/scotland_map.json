{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scottish Whisky Distilleries: Heritage Tourism",
    "subtitle": "Annual visitor numbers to major distilleries (2024 estimates)",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "width": 350,
  "height": 550,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/martinjc/UK-GeoJSON/master/json/administrative/sco/lad.json",
        "format": {"type": "json", "property": "features"}
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "geoshape",
        "fill": "#e8f4f8",
        "stroke": "#5a8ca8",
        "strokeWidth": 0.8
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/main/graphs/scotland_distilleries.csv"
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "circle",
        "opacity": 0.75,
        "stroke": "#2c3e50",
        "strokeWidth": 1.2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "annual_visitors",
          "type": "quantitative",
          "scale": {"range": [150, 1800]},
          "legend": {
            "title": "Annual Visitors",
            "format": ",",
            "symbolFillColor": "#8b6914",
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "domain": ["Speyside", "Highlands", "Islay", "Lowlands", "Isle of Skye", "Orkney"],
            "range": ["#d4af37", "#c17817", "#8b6914", "#6b5510", "#957029", "#b8860b"]
          },
          "legend": {
            "title": "Whisky Region",
            "orient": "bottom",
            "direction": "horizontal",
            "symbolType": "circle"
          }
        },
        "tooltip": [
          {"field": "distillery", "title": "Distillery"},
          {"field": "region", "title": "Region"},
          {"field": "annual_visitors", "title": "Annual Visitors", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}