{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Renewable Energy Share: A Steady Rise",
    "fontSize": 18,
    "font": "Arial",
    "anchor": "start",
    "color": "#333",
    "subtitle": "Percentage of primary energy using the substitution method",
    "subtitleFontSize": 12,
    "subtitleColor": "#666"
  },
  "description": "UK Renewable Energy Growth",
  "data": {
    "url": "https://raw.githubusercontent.com/yolwinpariaton/yolwinpariaton.github.io/49632c757768dad9b0acb8079ae00ead8bc0ad98/portfolio/renewable-share-energy.csv"
  },
  "width": 600,
  "height": 400,
  "mark": {"type": "line", "point": true, "strokeWidth": 3, "color": "#2e7d32"},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y",
        "labelAngle": 0,
        "titleFontSize": 14,
        "labelFontSize": 12
      }
    },
    "y": {
      "field": "Renewables (% equivalent primary energy)",
      "type": "quantitative",
      "title": "Renewable Energy (%)",
      "axis": {"titleFontSize": 14, "labelFontSize": 12, "format": ".1f"},
      "scale": {"domain": [0, 28]}
    },
    "tooltip": [
      {"field": "Year", "type": "temporal", "format": "%Y"},
      {
        "field": "Renewables (% equivalent primary energy)",
        "type": "quantitative",
        "format": ".2f",
        "title": "Renewable %"
      }
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": true, "gridColor": "#e0e0e0"}
  }
}