{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Advanced Analytics: UK Indicator Trend & Shock Regression",
    "subtitle": "Linear regression trend vs. σ-based shock detection (Size = Z-Score intensity)",
    "anchor": "start",
    "fontSize": 18,
    "fontWeight": "bold",
    "color": "#1e293b"
  },
  "data": {
    "url": "portfolio/dashboard1.json",
    "format": { "type": "json" }
  },
  "params": [
    {
      "name": "sigma_threshold",
      "value": 2.0,
      "bind": {
        "input": "range",
        "min": 0.5,
        "max": 4.0,
        "step": 0.25,
        "name": "Shock Sensitivity (σ): "
      }
    },
    {
      "name": "show_regression",
      "value": true,
      "bind": { "input": "checkbox", "name": "Show Regression Trend " }
    }
  ],
  "transform": [
    { "calculate": "toNumber(datum.date)", "as": "year" },
    { "calculate": "toDate(toString(datum.year) + '-01-01')", "as": "year_date" },
    { "filter": "isValid(datum.value) && datum.value != null" },
    {
      "window": [{ "op": "lag", "field": "value", "as": "prev_value" }],
      "sort": [{ "field": "year", "order": "ascending" }]
    },
    {
      "calculate": "isValid(datum.prev_value) && datum.prev_value != 0 ? (datum.value / datum.prev_value - 1) * 100 : 0",
      "as": "yoy_pct"
    },
    {
      "joinaggregate": [
        { "op": "mean", "field": "yoy_pct", "as": "mu" },
        { "op": "stdev", "field": "yoy_pct", "as": "sd" }
      ]
    },
    {
      "calculate": "datum.sd > 0 ? (datum.yoy_pct - datum.mu) / datum.sd : 0",
      "as": "z"
    },
    { "calculate": "abs(datum.z) >= sigma_threshold", "as": "is_shock" }
  ],
  "layer": [
    {
      "description": "Background bands for standard deviation",
      "mark": { "type": "rect", "opacity": 0.05, "color": "#64748b" },
      "encoding": {
        "y": { "datum": -1, "type": "quantitative" },
        "y2": { "datum": 1 }
      }
    },
    {
      "description": "Mean line",
      "mark": { "type": "rule", "color": "#94a3b8", "strokeDash": [4, 4] },
      "encoding": { "y": { "field": "mu", "type": "quantitative" } }
    },
    {
      "description": "Main Bubble Plot",
      "mark": { "type": "point", "filled": true, "stroke": "white", "strokeWidth": 1 },
      "encoding": {
        "x": {
          "field": "year_date",
          "type": "temporal",
          "title": "Timeline",
          "axis": { "grid": false, "format": "%Y" }
        },
        "y": {
          "field": "yoy_pct",
          "type": "quantitative",
          "title": "YoY % Change",
          "axis": { "gridOpacity": 0.4 }
        },
        "size": {
          "field": "z",
          "type": "quantitative",
          "scale": { "range": [50, 1000] },
          "title": "Magnitude (Z-Score)",
          "legend": { "orient": "bottom", "offset": 10 }
        },
        "color": {
          "condition": {
            "test": "datum.is_shock",
            "value": "#e11d48"
          },
          "value": "#3b82f6"
        },
        "opacity": {
          "condition": { "test": "datum.is_shock", "value": 0.9 },
          "value": 0.4
        },
        "tooltip": [
          { "field": "year", "title": "Year" },
          { "field": "yoy_pct", "title": "Change %", "format": ".2f" },
          { "field": "z", "title": "Z-Score (σ)", "format": ".2f" }
        ]
      }
    },
    {
      "description": "Regression Line",
      "transform": [
        { "filter": "show_regression" },
        { "regression": "yoy_pct", "on": "year" }
      ],
      "mark": { "type": "line", "color": "#1e293b", "strokeWidth": 3, "opacity": 0.7 },
      "encoding": {
        "x": { "field": "year", "type": "quantitative" },
        "y": { "field": "yoy_pct", "type": "quantitative" }
      }
    }
  ],
  "width": 750,
  "height": 400,
  "config": {
    "view": { "stroke": "transparent" },
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 12,
      "domain": false
    }
  }
}